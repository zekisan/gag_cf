<p id="notice"><%= notice %></p>

<p>
  <strong>Titulo:</strong>
  <%= @post.titulo %>
</p>

<p>
	<% if @post.has_photo? %>
  		<%= image_tag @post.photo_path %>
  	<% else %>
  		<b>Problema ao fazer o upload da foto!</b>
  	<% end %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
